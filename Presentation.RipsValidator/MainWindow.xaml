<Window x:Class="Presentation.RipsValidator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1300">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--Menu vertical borde-->
        <Border Grid.Column="0"
                Background="{StaticResource main_color_solid}">

            <StackPanel>
                <StackPanel Orientation="Horizontal"
                            Height="30"
                            Margin="15,10,0,2">

                    <TextBlock Text="Rips Validador" FontFamily="Microsoft YaHei" Foreground="White"></TextBlock>
                </StackPanel>
                <RadioButton Style="{StaticResource MenuButton}" Content="Validar estructura" Click="NavigateToFrame_Click" Cursor="Hand"/>
            </StackPanel>
        </Border>

        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Grid.Column="1"></Frame>
        
        <!--Menu vertical componente-->
        
    </Grid>
</Window>
